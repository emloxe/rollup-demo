{
  "extends": "airbnb-base",
  "plugins": ["prettier"],
  "env": {
    "browser": true
  },
  "globals": {
    "$": true,
    "echarts": true,
    "twaver": true
  },
  "rules": {
    "class-methods-use-this": 0,
    "func-names": 0,
    "import/extensions": 0,
    "import/prefer-default-export": 0,
    "max-len": 0,
    "no-bitwise": 0,
    "no-console": 0,
    "no-lonely-if": 0,
    "no-param-reassign": 0,
    "no-plusplus": 0,
    "no-multi-assign": 0,
    "no-nested-ternary": 0,
    "no-this-before-super": 0,
    "no-use-before-define": 0,
    "no-empty": 0,
    "eol-last": 0,
    "linebreak-style": ["off", "windows"],
    "no-underscore-dangle": 0,
    "no-control-regex": 0,
    "no-restricted-properties": 0,
    "no-useless-escape": 0,
    "no-unused-vars": [
      "error",
      {
        "vars": "all",
        "args": "none",
        "ignoreRestSiblings": false
      }
    ],
    "one-var": 0,
    "prefer-const": 0,
    "prefer-destructuring": 0
  },
  "settings": {
    "import/resolver": {
      "node": {
        "moduleDirectory": ["node_modules", "docs/js/libs/"]
      }
    }
  }
}